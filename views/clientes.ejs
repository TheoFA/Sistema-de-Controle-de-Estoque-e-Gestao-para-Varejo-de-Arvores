<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Cliente</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>    
    <link rel="stylesheet" href="styles.css">
</head>
<body>
      <!--  BARRA DE NAVEGAÇÃO -->
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <img src="imagens/palmicon.png"  alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
  
            Palmeira Bonita
        </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            </div>
        </div>
      </nav>
  <!--  FIM DA BARRA DE NAVEGAÇÃO -->
    <h1>Cadastro de Cliente</h1>
    <form action="/cadastrar-cliente" method="post">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" required>

        <label for="cidade">Cidade:</label>
        <input type="text" id="cidade" name="cidade" required>

        <label for="tipoObra">Tipo de Obra:</label>
        <select id="tipoObra" name="tipoObra">
            <option value="Residencial">Residencial</option>
            <option value="Comercial">Comercial</option>
            <option value="Industrial">Industrial</option>
        </select>
        <br>
        <label for="indicacao">Indicação:</label>
        <select id="indicacao" name="indicacao">
            <option value="Site">Site</option>
            <option value="Indicação de Cliente">Indicação de Cliente</option>
            <option value="Indicação de GA">Indicação de GA</option>
            <option value="Redes Sociais">Redes Sociais</option>
            <option value="Paisagista">Paisagista</option>
            <option value="Outros">Outros</option>
        </select>

        <label for="contato">Contato:</label>
        <input type="text" id="contato" name="contato" required>

        <button type="submit">Cadastrar</button>
    </form>
    
    <h1>Lista de Clientes</h1>
    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Cidade</th>
                <th>Tipo de Obra</th>
                <th>Contato</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% clientes.forEach(function(cliente) { %>
                <tr>
                    <td><%= cliente.nome %></td>
                    <td><%= cliente.cidade %></td>
                    <td><%= cliente.tipoObra %></td>
                    <td><%= cliente.contato %></td>
                    <td><a href="/clientes/<%= cliente._id %>">Detalhes</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
  
</body>
</html>
