    <link rel="stylesheet" href="/styles.css">
    <title>Detalhes da Obra</title>
</head>
<body>
   <!--  BARRA DE NAVEGAÇÃO -->
   <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <img src="/imagens/palmicon.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
        Palmeira Bonita
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <!-- Navbar items -->
          <!-- ... -->
        </ul>
      </div>
    </div>
  </nav>
<!--  FIM DA BARRA DE NAVEGAÇÃO -->

<h1>Detalhes da Obra</h1>

<h2><%= obra.nome %></h2>
<p>Cliente: <%= obra.cliente ? obra.cliente.nome : 'Nenhum cliente' %> <a href="http://localhost:3000/clientes/<%= obra.cliente._id %>"> <br> Ir a pagina do cliente</a></p> 
<p>Status: <%= obra.status %></p>

<div class="mt-3">
  <a href="/<%= obra._id %>/orcamentos/novo" class="btn btn-primary">Criar Orçamento</a>
  <a href="/<%= obra._id %>/orcamentos" class="btn btn-secondary">Ver Orçamentos</a>
</div>
<br>
<h3>Gastos registrados</h3>
<table>
    <thead>
        <tr>
          <th>Produto</th>
            <th>Categoria</th>
           
            <th>Valor</th>
            <th>Data</th>
        </tr>
    </thead>
    <tbody>
        <% gastos.forEach(gasto => { %>
            <tr>
              <td><%= gasto.produto %></td>
                <td><%= gasto.categoria %></td>
             
                <td><%= gasto.valor %></td>
                <td><%= gasto.data.toDateString() %></td>
            </tr>
        <% }); %>
    </tbody>
</table>

<a href="/obras">Voltar</a>

</body>
</html>
