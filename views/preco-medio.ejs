<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/styles.css">
    <title>Preço Médio de Produtos</title>
    
</head>
<body>
       <!--  BARRA DE NAVEGAÇÃO -->
       <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/imagens/palmicon.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                Palmeira Bonita
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
             <ul></ul>
            </div>
        </div>
    </nav>
    <!--  FIM DA BARRA DE NAVEGAÇÃO -->
      <br>
    <h1>Preço Médio de Produtos</h1>
    <table>
        <thead>
            <tr>
                <th>Produto</th>
                <th>Preço Médio de Venda</th>
                <th>Preço Médio de Compra</th>
                <th>Lucro Estimado por Produto</th>
                <th>Total de vendas</th>
                <th>Total de valor de compra</th>
            </tr>
        </thead>
        <tbody>
            <% precoMedio.forEach(produto => { %>
            <tr>
                <td><%= produto.descricao %></td>
                <td>R$ <%= produto.precoMedioVenda.toFixed(2) %></td>
                <td>R$ <%= produto.precoMedioCompra.toFixed(2) %></td>
                <td>R$ <%= produto.lucroMedio.toFixed(2) %></td>
                <td>R$ <%= produto.totalValorVenda.toFixed(2) %></td> <!-- Preço total de venda -->
                <td>R$ <%= produto.totalValorCompra.toFixed(2) %></td> <!-- Gasto total -->
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
