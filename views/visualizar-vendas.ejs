<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/styles.css">
    <title>Visualizar Vendas</title>
</head>



<body>
  <!--  BARRA DE NAVEGAÇÃO -->
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="imagens/palmicon.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
            Palmeira Bonita
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
         <ul></ul>
        </div>
    </div>
</nav>
<!--  FIM DA BARRA DE NAVEGAÇÃO -->

    <h1>Vendas</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Nome da Obra</th>
                <th>Data</th>
                <th>Valor Total</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% vendas.forEach(venda => { %>
                <tr>
                    <td><%= venda.cliente.nome %></td>
                    <td><%= venda.data.toDateString() %></td>
                    <td><%= venda.valorTotal %></td>
                    <td><a href="/vendas/<%= venda._id %>" class="btn btn-primary">Ver Detalhes</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/" class="btn btn-secondary mt-3">Voltar</a>
</body>
</html>
