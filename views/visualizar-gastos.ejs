<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/styles.css">
    <title>Visualizar Gastos</title>
</head>
<body>
    <!-- BARRA DE NAVEGAÇÃO -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="imagens/palmicon.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                Palmeira Bonita
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <!-- Outras opções de navegação -->
                    <li class="nav-item">
                        <a class="nav-link" href="/visualizar-gastos">Visualizar Gastos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- FIM DA BARRA DE NAVEGAÇÃO -->

    <h1>Visualizar Gastos</h1>
    <form id="filter-form">
        <label for="tipoGasto">Tipo de Gasto:</label>
        <select name="tipoGasto" id="tipoGasto">
            <option value="">Todos</option>
            <% tiposGasto.forEach(tipo => { %>
                <option value="<%= tipo %>"><%= tipo %></option>
            <% }); %>
        </select>

        <label for="categoria">Categoria:</label>
        <select name="categoria" id="categoria">
            <option value="">Todas</option>
            <% categorias.forEach(categoria => { %>
                <option value="<%= categoria %>"><%= categoria %></option>
            <% }); %>
        </select>

        <label for="produto">Produto:</label>
        <input type="text" name="produto" id="produto">

        <button type="submit">Filtrar</button>
    </form>

    <table>
        <thead>
            <tr>
                <th>Tipo de Gasto</th>
                <th>Categoria</th>
                <th>Produto</th>
                <th>Valor</th>
                <th>Data</th>
                <th>Obra</th>
            </tr>
        </thead>
        <tbody>
            <% gastos.forEach(gasto => { %>
                <tr>
                    <td><%= gasto.tipoGasto %></td>
                    <td><%= gasto.categoria %></td>
                    <td><%= gasto.produto %></td>
                    <td><%= gasto.valor %></td>
                    <td><%= gasto.data.toISOString().split('T')[0] %></td>
                    <td><%= gasto.obra ? gasto.obra.nome : 'Nenhuma' %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
