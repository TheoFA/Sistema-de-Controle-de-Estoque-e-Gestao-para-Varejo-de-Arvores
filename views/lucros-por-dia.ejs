<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Lucros por Dia e Mês</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
     <!--  BARRA DE NAVEGAÇÃO -->
     <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="imagens/palmicon.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                Palmeira Bonita
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
             <ul></ul>
            </div>
        </div>
    </nav>
    <!--  FIM DA BARRA DE NAVEGAÇÃO -->

    <div class="container mt-4">
        <h1>Lucros por Dia</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Total de Vendas</th>
                    <th>Total de Gastos</th>
                    <th>Saldo do Dia</th>
                </tr>
            </thead>
            <tbody>
                <% dias.forEach(dia => { %>
                <tr>
                    <td><%= dia.data %></td>
                    <td>R$ <%= dia.totalVendas.toFixed(2) %></td>
                    <td>R$ <%= dia.totalGastos.toFixed(2) %></td>
                    <td>R$ <%= dia.saldo.toFixed(2) %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>

        <h2>Lucros por Mês</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Mês</th>
                    <th>Total de Vendas</th>
                    <th>Total de Gastos</th>
                    <th>Saldo do Mês</th>
                </tr>
            </thead>
            <tbody>
                <% meses.forEach(mes => { %>
                <tr>
                    <td><%= mes.mes %></td>
                    <td>R$ <%= mes.totalVendas.toFixed(2) %></td>
                    <td>R$ <%= mes.totalGastos.toFixed(2) %></td>
                    <td>R$ <%= mes.saldo.toFixed(2) %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
