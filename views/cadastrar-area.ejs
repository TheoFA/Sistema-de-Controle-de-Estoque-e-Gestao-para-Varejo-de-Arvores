<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Cadastrar Area</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
     <!--  BARRA DE NAVEGAÇÃO -->
     <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="imagens/palmicon.png"  alt="Logo" width="30" height="24" class="d-inline-block align-text-top">

          Palmeira Bonita
      </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          </div>
      </div>
    </nav>
<!--  FIM DA BARRA DE NAVEGAÇÃO -->

    <h1>Cadastrar Nova Área</h1>
    <form action="/cadastrar-area" method="post">
        <input type="text" name="area" placeholder="Nome da area" required>
        <input type="submit" value="Cadastrar">
    </form>

    <h2>Áreas Cadastradas</h2>
<input type="text" id="searchInput" placeholder="Digite para filtrar...">

<ul id="areasList">
    <% areas.forEach(function(area, index) { %>
        <li id="areas<%= index %>"><%= area.nome %></li>
    <% }); %>
</ul>

</body>
</html>
<script>
    document.getElementById('searchInput').addEventListener('input', function() {
        let searchTerm = this.value.toLowerCase();
        let areasList = document.getElementById('areasList').getElementsByTagName('li');

        for (let i = 0; i < areasList.length; i++) {
            let areasName = areasList[i].textContent.toLowerCase();
            if (areasName.startsWith(searchTerm)) {
                areasList[i].style.display = 'block';
            } else {
                areasList[i].style.display = 'none';
            }
        }
    });
</script>

