<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/styles.css">
    <title>Orçamentos da Obra</title>
</head>
<body>
       <!--  BARRA DE NAVEGAÇÃO -->
       <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/imagens/palmicon.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                Palmeira Bonita
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
             <ul></ul>
            </div>
        </div>
    </nav>
    <!--  FIM DA BARRA DE NAVEGAÇÃO -->
    <h1>Orçamentos da Obra <%= obra.nome %></h1>
    <table class="table">
        <thead>
            <tr>
                <th>Data</th>
                <th>Valor Total</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% orcamentos.forEach(orcamento => { %>
                <tr>
                    <td><%= orcamento.data.toDateString() %></td>
                    <td><%= orcamento.valorTotal %></td>
                    <td><%= orcamento.status %></td>
                    <td><a href="/orcamentos/<%= orcamento._id %>" class="btn btn-primary">Ver Detalhes</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/obras/<%= obra._id %>" class="btn btn-secondary mt-3">Voltar</a>
</body>
</html>
